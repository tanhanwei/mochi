{
  "manifest_version": 3,
  "name": "MindMeld",
  "version": "1.0",
  "description": "Enhances web accessibility for cognitive diversity by simplifying and transforming web content",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "options_page": "options.html"
}
